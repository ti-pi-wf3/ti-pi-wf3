{% extends 'base_admin.html.twig' %}

{% block title %}DOCUMENTS | Ajouter une catégorie de document{% endblock %}

{% block body %}

    {# <h1>{{ controller_name }}</h1> #}

    {% for message in app.flashes("success") %}
        <div class="col-md-4 mx-auto alert alert-primary text-center p-2">
            {{ message }}
        </div>
    {% endfor %}

    <div class="text-center pb-4"><a href="{{ path('categoryDocumentAdd') }}" class="text-dark">Ajouter une catégorie</a></div>


    <table class="table table-bordered text-center">

        <tr>
            {% for data in colonnes %}
                {% if data != 'id' %}
                    {# <th>{{ data }}</th> #}
                    <th>CATEGORY</th>
                {% endif %}
            {% endfor %}
            {# <th>Catégorie</th> #}
            <th>Edit</th>
            <th>Supp</th>
        </tr>
        {% for key, data in categoryDocument %}
            <tr>
                <td>{{ data.titleCategoryDoc }}</td>

                <td><a href="{{ path('categoryDocumentEdit', {'id': data.id }) }}" class="text-dark"><i class="bi bi-pencil"></i></a></td>

                <td><a href="{{ path('categoryDocumentDelete', {'id': data.id })}}" class="text-dark"><i class="bi bi-trash"></i></a></td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}