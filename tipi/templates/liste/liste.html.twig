{% extends 'base_admin.html.twig' %}

{% block title %}Hello Liste de trucs{% endblock %}

{% block body %}

    <div class="container">

            {# {% if articlesBDD.categoryArticle is not empty %} #}

            <h3 class="title text-center">Courses</h3>

                <div class="text-center my-4 d-flex justify-content-center">
                    <div>
                        <a class="mx-2" href="{{ path('category') }}"><input type="button" class="button" value="Ajouter une catégorie"></a>
                    </div>
                
                    <div>
                        <a class="mx-2" href="{{ path('article') }}"><input type="button" class="button" value="Ajouter un article"></a>
                    </div>
                </div>

    <form class="d-flex flex-wrap" method="POST">
                {% for oneCat in catBDD %}
                
                <div class="task col-3 mx-auto my-1 ">
                    <div class="text-center mt-2">
                    <h4>{{ oneCat.titleCategoryArticle }}</h4>
                    </div> <hr>
                        {% for oneArticle in oneCat.articles %}
    
                        <div class="form-check ms-4">
                            <input class="form-check-input" type="checkbox" name="{{ oneCat.titleCategoryArticle }}" value="{{ oneArticle.titleArticle }}" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                <p>{{ oneArticle.titleArticle }}</p>
                            </label>
                        </div>
{# {{dump(oneArticle.titleArticle) }} #}

                        {% endfor %}
                </div>
            
            {% endfor %}
                    <div class="d-flex justify-content-center mt-4">
                        <input type="button" class="button" value="Créer une liste">
                    </div>
</form>
            {# {% endif %} #}
                
    </div>


                
    {# </div> #}

{% endblock %}
